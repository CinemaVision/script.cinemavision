<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
    <defaultcontrol>201</defaultcontrol>
    <animation effect="slide" start="0,1080" end="0,0" time="200">WindowOpen</animation>
    <animation effect="slide" start="0,0" end="0,1080" time="200">WindowClose</animation>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>script.cinemavision-white_square.png</texture>
            <colordiffuse>A0000000</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="group">
            <posx>170</posx>
            <posy>50</posy>
            <control type="image">
                <posx>-20</posx>
                <posy>-20</posy>
                <width>1630</width>
                <height>1020</height>
                <texture>script.cinemavision-white_square.png</texture>
                <colordiffuse>60000000</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <posx>-5</posx>
                <posy>-5</posy>
                <width>1600</width>
                <height>990</height>
                <texture>script.cinemavision-white_square.png</texture>
                <colordiffuse>FFDDDDDD</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1590</width>
                <height>980</height>
                <texture>script.cinemavision-white_square.png</texture>
                <colordiffuse>FF101010</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>

            <control type="list" id="300">
                <posx>0</posx>
                <posy>20</posy>
                <width>1020</width>
                <height>960</height>
                <scrolltime>200</scrolltime>
                <orientation>vertical</orientation>
                <onright>201</onright>

                <itemlayout height="190">
                    <control type="image">
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>980</width>
                        <height>180</height>
                        <texture>script.cinemavision-white_square.png</texture>
                        <colordiffuse>FF252525</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="group">
                        <posx>20</posx>
                        <posy>0</posy>
                        <control type="image">
                            <posx>15</posx>
                            <posy>15</posy>
                            <width>100</width>
                            <height>150</height>
                            <texture>$INFO[ListItem.Thumb]</texture>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>135</left>
                            <top>15</top>
                            <width>830</width>
                            <height>75</height>
                            <font>font30</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <align>left</align>
                            <aligny>top</aligny>
                            <label>[B]$INFO[ListItem.Label][/B]</label>
                        </control>
                        <control type="label">
                            <left>135</left>
                            <top>95</top>
                            <width>430</width>
                            <height>60</height>
                            <font>font20</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <align>left</align>
                            <aligny>top</aligny>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                        <control type="label">
                            <left>565</left>
                            <top>95</top>
                            <width>400</width>
                            <height>60</height>
                            <font>font20</font>
                            <textcolor>FFD0D0D0</textcolor>
                            <align>right</align>
                            <aligny>top</aligny>
                            <label>$INFO[ListItem.Property(rating)]</label>
                        </control>
                    </control>
                </itemlayout>

                <focusedlayout height="190">
                     <control type="image">
                        <visible>!Control.HasFocus(300)</visible>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1020</width>
                        <height>180</height>
                        <texture>script.cinemavision-white_square.png</texture>
                        <colordiffuse>FF252525</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <visible>Control.HasFocus(300)</visible>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1020</width>
                        <height>180</height>
                        <texture>script.cinemavision-white_square.png</texture>
                        <colordiffuse>FF26539B</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <visible>!IsEmpty(ListItem.Property(moving))</visible>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1020</width>
                        <height>180</height>
                        <texture>script.cinemavision-white_square.png</texture>
                        <colordiffuse>FF00A000</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="group">
                        <posx>20</posx>
                        <posy>0</posy>
                        <control type="image">
                            <posx>15</posx>
                            <posy>15</posy>
                            <width>100</width>
                            <height>150</height>
                            <texture>$INFO[ListItem.Thumb]</texture>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>135</left>
                            <top>15</top>
                            <width>830</width>
                            <height>75</height>
                            <font>font30</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <align>left</align>
                            <aligny>top</aligny>
                            <label>[B]$INFO[ListItem.Label][/B]</label>
                        </control>
                        <control type="label">
                            <left>135</left>
                            <top>95</top>
                            <width>830</width>
                            <height>60</height>
                            <font>font20</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <align>left</align>
                            <aligny>top</aligny>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                        <control type="label">
                            <left>565</left>
                            <top>95</top>
                            <width>400</width>
                            <height>60</height>
                            <font>font20</font>
                            <textcolor>FFD0D0D0</textcolor>
                            <align>right</align>
                            <aligny>top</aligny>
                            <label>$INFO[ListItem.Property(rating)]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>

            <control type="group">
                <posx>1010</posx>
                <posy>0</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>570</width>
                    <height>980</height>
                    <texture>script.cinemavision-white_square.png</texture>
                    <colordiffuse>FF353535</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
                    <posx>145</posx>
                    <posy>45</posy>
                    <width>310</width>
                    <height>80</height>
                    <texture>script.cinemavision-white_square.png</texture>
                    <colordiffuse>FF151515</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="button" id="201">
                    <enable>IntegerGreaterThan(Container(300).NumItems, 0)</enable>
                    <posx>150</posx>
                    <posy>50</posy>
                    <width>300</width>
                    <height>70</height>
                    <label>[B]PLAY[/B]</label>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <align>center</align>
                    <texturefocus colordiffuse="FF26539B">script.cinemavision-white_square.png</texturefocus>
                    <texturenofocus colordiffuse="FF252525">script.cinemavision-white_square.png</texturenofocus>
                    <onleft>300</onleft>
                    <ondown>202</ondown>
                </control>
                <control type="image">
                    <posx>145</posx>
                    <posy>160</posy>
                    <width>310</width>
                    <height>80</height>
                    <texture>script.cinemavision-white_square.png</texture>
                    <colordiffuse>FF151515</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="button" id="202">
                    <posx>150</posx>
                    <posy>165</posy>
                    <width>300</width>
                    <height>70</height>
                    <label>[B]CANCEL[/B]</label>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <align>center</align>
                    <texturefocus colordiffuse="FF26539B">script.cinemavision-white_square.png</texturefocus>
                    <texturenofocus colordiffuse="FF252525">script.cinemavision-white_square.png</texturenofocus>
                    <onleft>300</onleft>
                    <onup>201</onup>
                </control>
            </control>

        </control>

        <control type="group">
            <posx>1230</posx>
            <posy>390</posy>
            <control type="image">
                <posx>-20</posx>
                <posy>-20</posy>
                <width>530</width>
                <height>640</height>
                <texture>script.cinemavision-white_square.png</texture>
                <colordiffuse>60000000</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <posx>-5</posx>
                <posy>-5</posy>
                <width>500</width>
                <height>610</height>
                <texture>script.cinemavision-white_square.png</texture>
                <colordiffuse>FFA0A0A0</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>490</width>
                <height>600</height>
                <texture>script.cinemavision-white_square.png</texture>
                <colordiffuse>FF303030</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="textbox">
                <left>20</left>
                <top>20</top>
                <width>450</width>
                <height>560</height>
                <font>font16</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>Click an item to start a move.[CR][CR]Click the [COLOR FF64A0FF]context menu button[/COLOR] or [COLOR FF64A0FF]delete key[/COLOR] on a keyboard to remove an item.</label>
            </control>
        </control>
    </controls>
</window>